<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idealist.www.myapplication.Item.wpi">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:textColor="#000000"
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WPI성격유형검사는 연세대학교 심리학과 황상민 교수가
            10여 년에 걸친 인간심리 탐구와 실제 적용을 통해 개발한
            성격 및 라이프 스타일 진단 방법입니다." />


        <ImageView
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/wpi1" />

        <ImageView
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="355dp"
            android:src="@drawable/wpi2" />

        <ImageView
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:src="@drawable/wpi3" />

        <ImageView
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="355dp"
            android:src="@drawable/wpi4" />

        <Button
            android:id="@+id/gowpi"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:text="유료검사하러가기(11000원)"
            android:textSize="10sp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
